@model List<Show>;
@{
    ViewData["Title"] = "Catálogo de Anime";
}

<style>
    /* Base styles */
    body {
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
        background-color: #f9fafb;
        color: #1f2937;
    }

    /* Container */
    .container {
        width: 100%;
        max-width: 1280px;
        margin-left: auto;
        margin-right: auto;
        padding-left: 1rem;
        padding-right: 1rem;
        padding-top: 2rem;
        padding-bottom: 2rem;
    }

    /* Typography */
    h1 {
        font-size: 1.875rem;
        font-weight: 700;
        text-align: center;
        margin-bottom: 1.5rem;
    }

    /* Search bar */
    .search-wrapper {
        position: relative;
        max-width: 32rem;
        margin-left: auto;
        margin-right: auto;
    }

    .search-icon {
        position: absolute;
        top: 0;
        bottom: 0;
        left: 0;
        display: flex;
        align-items: center;
        padding-left: 0.75rem;
        pointer-events: none;
    }

    .search-input {
        width: 100%;
        padding: 1rem;
        padding-left: 2.5rem;
        font-size: 0.875rem;
        border-radius: 0.5rem;
        border: 1px solid #d1d5db;
        outline: none;
        transition: border-color 0.2s, box-shadow 0.2s;
    }

        .search-input:focus {
            border-color: #6366f1;
            box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.2);
        }

    /* Filter buttons */
    .filter-container {
        display: flex;
        justify-content: center;
        flex-wrap: wrap;
        gap: 0.5rem;
        margin-top: 1rem;
        margin-bottom: 2rem;
    }

    .filter-btn {
        background-color: #e0e7ff;
        color: #4f46e5;
        padding: 0.5rem 1rem;
        border-radius: 9999px;
        font-size: 0.875rem;
        font-weight: 500;
        border: none;
        cursor: pointer;
        transition: all 0.2s;
    }

        .filter-btn:hover {
            background-color: #c7d2fe;
        }

        .filter-btn.active {
            background-color: #4f46e5;
            color: white;
        }

    /* Grid layout */
    .shows-grid {
        display: grid;
        grid-template-columns: repeat(1, 1fr);
        gap: 1.5rem;
    }

    @@media (min-width: 640px) {
        .shows-grid

    {
        grid-template-columns: repeat(2, 1fr);
    }

    }

    @@media (min-width: 768px) {
        .shows-grid

    {
        grid-template-columns: repeat(3, 1fr);
    }

    }

    @@media (min-width: 1024px) {
        .shows-grid

    {
        grid-template-columns: repeat(4, 1fr);
    }

    }

    /* Card styles */
    .show-card {
        background-color: white;
        border-radius: 0.75rem;
        overflow: hidden;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
        transition: all 0.3s ease;
    }

        .show-card:hover {
            transform: translateY(-0.5rem);
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
        }

    .card-image-container {
        position: relative;
    }

    .card-image {
        width: 100%;
        height: 16rem;
        object-fit: cover;
    }

    .card-genre-badge {
        position: absolute;
        top: 0.5rem;
        right: 0.5rem;
        background-color: #e0e7ff;
        color: #4338ca;
        font-size: 0.75rem;
        font-weight: 500;
        padding: 0.25rem 0.625rem;
        border-radius: 9999px;
    }

    .card-title-overlay {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        background-image: linear-gradient(to top, rgba(0, 0, 0, 0.8), transparent);
        padding: 1rem;
    }

    .card-title {
        color: white;
        font-size: 1.25rem;
        font-weight: 700;
    }

    .card-content {
        padding: 1rem;
    }

    .card-description {
        color: #4b5563;
        font-size: 0.875rem;
        margin-bottom: 0.75rem;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .card-meta {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 0.75rem;
    }

    .card-year {
        color: #6b7280;
        font-size: 0.75rem;
    }

    .card-stars {
        display: flex;
        align-items: center;
    }

    .star-filled {
        color: #fbbf24;
        width: 1rem;
        height: 1rem;
    }

    .star-empty {
        color: #d1d5db;
        width: 1rem;
        height: 1rem;
    }

    .card-studio {
        display: inline-block;
        background-color: #f3f4f6;
        color: #4b5563;
        font-size: 0.75rem;
        padding: 0.25rem 0.5rem;
        border-radius: 0.25rem;
        margin-bottom: 1rem;
    }

    .card-button {
        display: block;
        width: 100%;
        background-color: #4f46e5;
        color: white;
        font-weight: 500;
        padding: 0.5rem 1rem;
        border-radius: 0.375rem;
        text-align: center;
        text-decoration: none;
        transition: background-color 0.3s;
    }

        .card-button:hover {
            background-color: #4338ca;
        }

    /* No results */
    .no-results {
        text-align: center;
        padding: 3rem 0;
        display: none;
    }

    .no-results-icon {
        margin-left: auto;
        margin-right: auto;
        height: 4rem;
        width: 4rem;
        color: #9ca3af;
    }

    .no-results-title {
        margin-top: 0.5rem;
        font-size: 1.125rem;
        font-weight: 500;
        color: #1f2937;
    }

    .no-results-text {
        margin-top: 0.25rem;
        font-size: 0.875rem;
        color: #6b7280;
    }
</style>

<div class="container">
    <!-- Header con barra de búsqueda -->
    <div>
        <h1>Catálogo de Anime</h1>
        <div class="search-wrapper">
            <div class="search-icon">
                <svg width="20" height="20" fill="none" stroke="#9ca3af" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                </svg>
            </div>
            <input type="text" id="searchInput" class="search-input" placeholder="Buscar por título o género..." onkeyup="searchShows()">
        </div>
        <div class="filter-container">
            <button class="filter-btn active" data-filter="all">Todos</button>
            <button class="filter-btn" data-filter="Acción">Acción</button>
            <button class="filter-btn" data-filter="Aventura">Aventura</button>
            <button class="filter-btn" data-filter="Comedia">Comedia</button>
            <button class="filter-btn" data-filter="Drama">Drama</button>
            <button class="filter-btn" data-filter="Fantasía">Fantasía</button>
        </div>
    </div>

    <!-- Grid de tarjetas de anime -->
    <div class="shows-grid" id="showsGrid">
        @foreach (var show in Model)
        {
            <div class="show-card" data-genre="@show.Genre" data-title="@show.Title.ToLower()">
                <div class="card-image-container">
                    <img src="@show.Image" alt="@show.Title" class="card-image">
                    <div class="card-genre-badge">
                        @show.Genre
                    </div>
                    <div class="card-title-overlay">
                        <h3 class="card-title">@show.Title</h3>
                    </div>
                </div>

                <div class="card-content">
                    <div class="card-description">@show.Description</div>

                    <div class="card-meta">
                        <div class="card-year">@show.ReleaseDate.ToString("yyyy")</div>
                        <div class="card-stars">
                            @for (int i = 0; i < 5; i++)
                            {
                                if (i < show.Rating)
                                {
                                    <svg class="star-filled" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118l-2.8-2.034c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                                    </svg>
                                }
                                else
                                {
                                    <svg class="star-empty" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118l-2.8-2.034c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                                    </svg>
                                }
                            }
                        </div>
                    </div>

                    <span class="card-studio">@show.Studio</span>

                    <a href="/Shows/Details/@show.Id" class="card-button">
                        Ver detalles
                    </a>
                </div>
            </div>
        }
    </div>

    <!-- Mensaje de "No se encontraron resultados" -->
    <div id="noResults" class="no-results">
        <svg class="no-results-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M12 2a10 10 0 110 20 10 10 0 010-20z"></path>
        </svg>
        <h3 class="no-results-title">No se encontraron resultados</h3>
        <p class="no-results-text">Intenta con otros términos de búsqueda o filtros.</p>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Filtrar por botones de género
        const filterButtons = document.querySelectorAll('.filter-btn');

        filterButtons.forEach(button => {
            button.addEventListener('click', function() {
                const filterValue = this.getAttribute('data-filter');

                // Quitar clase activa de todos los botones
                filterButtons.forEach(btn => {
                    btn.classList.remove('active');
                });

                // Agregar clase activa al botón actual
                this.classList.add('active');

                // Filtrar las tarjetas
                const showCards = document.querySelectorAll('.show-card');
                let visibleCount = 0;

                showCards.forEach(card => {
                    if (filterValue === 'all' || card.getAttribute('data-genre').includes(filterValue)) {
                        card.style.display = 'block';
                        visibleCount++;
                    } else {
                        card.style.display = 'none';
                    }
                });

                // Mostrar mensaje si no hay resultados
                document.getElementById('noResults').style.display = visibleCount === 0 ? 'block' : 'none';
            });
        });
    });

    // Función de búsqueda
    function searchShows() {
        const searchInput = document.getElementById('searchInput').value.toLowerCase();
        const showCards = document.querySelectorAll('.show-card');
        let visibleCount = 0;

        showCards.forEach(function(card) {
            const title = card.getAttribute('data-title').toLowerCase();
            const genre = card.getAttribute('data-genre').toLowerCase();

            if (title.includes(searchInput) || genre.includes(searchInput)) {
                card.style.display = 'block';
                visibleCount++;
            } else {
                card.style.display = 'none';
            }
        });

        // Mostrar mensaje si no hay resultados
        document.getElementById('noResults').style.display = visibleCount === 0 ? 'block' : 'none';
    }
</script>